<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="75"
             x:Class="Coursework.Views.Notification"
>
    <Border Name="NotificationBorder">
        <StackPanel Name="NotificationPanel">
            <TextBlock Name="NotificationHeader" />
            <TextBlock Name="NotificationDescription" />
            <ProgressBar 
                Name="NotificationTimeout" 
                ShowProgressText="False"
                Minimum="0"
                Maximum="100"
            />
        </StackPanel>
    </Border>
</UserControl>
